#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

BACKUP_DIR="./backups"
mkdir -p "$BACKUP_DIR"

BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
COMMIT_ID=$(git rev-parse --short HEAD)

TIMESTAMP=$(date +"%Y-%m-%d_%H-%M-%S")

BACKUP_FILE="$BACKUP_DIR/${BRANCH_NAME}_${COMMIT_ID}_${TIMESTAMP}.zip"

if [ -f "package-lock.json" ]; then
  echo "‚ùå Detected package-lock.json! Please use Yarn instead of npm."
  exit 1
fi

echo "üì¶ Creating project backup..."
zip -r "$BACKUP_FILE" . -x "node_modules/*" "backups/*" ".git/*"

echo "‚úÖ Backup saved at: $BACKUP_FILE"

yarn lint-staged
